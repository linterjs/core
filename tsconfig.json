{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "target": "ES2018"
  },
  "exclude": [
    "node_modules",
    "tests/**/*",
    "**/__mocks__",
    "**/__snapshots__",
    "**/__tests__",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "include": ["src/**/*"]
}
