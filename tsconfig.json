{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "target": "ES2018",
    "baseUrl": ".",
    "paths": {
      "@linter/core": ["src/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "tests/**/*",
    "**/__mocks__",
    "**/__snapshots__",
    "**/__tests__",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
