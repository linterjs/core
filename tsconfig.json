{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": [
    "**/__mocks__",
    "**/__snapshots__",
    "**/__tests__",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "include": [
    "./src"
  ]
}
